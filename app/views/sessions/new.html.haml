%section.sign_in
  = form_tag sessions_path, method: "post", class: "form-signin" do
    %h2.form-signin-heading Please sign in
    .form-group
      = label_tag :email, nil, class: "sr-only"
      = email_field_tag :email, nil, class: "form-control", placeholder: "Email address", required: true, autofocus: true
      = label_tag :password, nil, class: "sr-only"
      = password_field_tag :password, nil, class: "form-control", placeholder: "Password", required: true
    = submit_tag "Sign in", class: "btn btn-block btn-lg btn-primary"
